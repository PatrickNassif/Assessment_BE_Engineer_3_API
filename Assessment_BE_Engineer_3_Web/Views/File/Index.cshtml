@model List<Assessment_BE_Engineer_3_Web.Models.DTO.FileDTO>

<br />
<div class="row mb-3">
    <div class="col-6">
        <h2 class="text-primary">
            Files List
        </h2>
    </div>
</div>
<br />
<div class="row mb-3">

    <div class="col-4" style="margin-top:5px">
        @if (User.Identity.IsAuthenticated)
                    {
        <a asp-action="Create" class="btn btn-primary">
            Upload New File
        </a>
                    }
    </div>

</div>

<div class="p-4 border rounded">

    @if (Model.Count() > 0)
    {
        <table class="table table-striped border display" id="dataTable">
            <thead class="table-secondary">
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Size</th>
                    <th>Location</th>
                    <th>Uploaded Date</th>
                    <td>Actions</td>

                </tr>
            </thead>
            <tbody>
                @foreach (var file in Model)
                {
                    <tr>
                        <td>@file.Id</td>
                        <td>@file.Name</td>
                        <td>@file.Size</td>
                        <td>@file.Location</td>
                        <td>@file.UploadDate</td>

                        <td>
                            @if (User.Identity.IsAuthenticated)
                            {
                                <a style="cursor:pointer" onClick=Download('File/Download/@file.Id') class="btn btn-info text-white">
                                    Download
                                </a>


                                <a style="cursor:pointer" onClick=Delete('File/Delete/@file.Id') class="btn btn-danger text-white">
                                    Delete
                                </a>
                            }
                        </td>
                    </tr>

                }


            </tbody>
        </table>
    }
</div>
<script>
        $(document).ready(function () {
            $('#dataTable').DataTable({
                ordering: false,
                paging: false
            });
        });


    function Download(url) {

        $.ajax({
            url: url,
            type: 'GET',
            success: function (data) {
                if (data.success == true) {
                    var base64String = data.bytes;
                    // Convert the base64 string to a Uint8Array
                    var binaryString = window.atob(base64String);
                    var len = binaryString.length;
                    var bytes = new Uint8Array(len);
                    for (var i = 0; i < len; i++) {
                        bytes[i] = binaryString.charCodeAt(i);
                    }
                    // Create a Blob from the bytes
                    var blob = new Blob([bytes], { type: 'application/octet-stream' });
                    // Create a link element and set its attributes
                    var link = document.createElement('a');
                    link.href = window.URL.createObjectURL(blob);

                    var fileName = data.filename;
                    link.download = fileName;

                    // Append the link to the document and trigger a click to download the file
                    document.body.appendChild(link);
                    link.click();

                    // Remove the link from the document
                    document.body.removeChild(link);
                }
            }
        })

    }

    function Delete(url) {
        Swal.fire({
            title: 'Are You Sure',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes',
            cancelButtonText: 'Cancel'
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: url,
                    type: 'DELETE',
                    success: function (data) {
                        if (data.success == true) {
                            toastr.success(data.message);
                            window.location.reload();
                        }
                        else {
                            toastr.error(data.message);
                        }
                    }
                })
            }
        })
    }

</script>
